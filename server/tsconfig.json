{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      // "baseUrl": "./src",
      "skipLibCheck": true
      // "paths": {
      //   "@/": ["src/"]
      // }
    },
    "include": ["src/*/.ts"],
    "ts-node": {
      "esm": true
    }
}
