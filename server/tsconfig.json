{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "skipLibCheck": true,
      "paths": {
        "@/": ["src/"]
      }
    },
    "include": ["src/**/*.ts"],
    "ts-node": {
      "esm": true
    }
  }
  